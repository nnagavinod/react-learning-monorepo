{
  "compilerOptions": {
    "composite": true,
    "declarationMap": true,
    "emitDeclarationOnly": true,
    "importHelpers": true,
    "isolatedModules": true,
    "lib": ["es2022"],
    "module": "esnext",
    "moduleResolution": "bundler",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "skipLibCheck": true,
    "strict": true,
    "target": "es2022",
    "exactOptionalPropertyTypes": true,
    "noUncheckedIndexedAccess": true,
    "noPropertyAccessFromIndexSignature": true,
    "customConditions": ["@react-learning-monorepo/source"],
    "baseUrl": ".",
    "paths": {
      "@task-tracker/*": ["apps/task-tracker/src/*"],
      "@feedback-form/*": ["apps/feedback-form/src/*"],
      "@blog-platform/*": ["apps/blog-platform/src/*"],
      "@libs/*": ["libs/*"]
    }
  }
}
